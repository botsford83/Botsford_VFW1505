Ti.UI.setBackgroundColor("#000");


var margin = 20;
var font = {fontSize: 14, fontFamily: "Helvetica", fontWeight: "bold", fontsStyle: "italic"};
var sports = [];

var mainWindow = Ti.UI.createWindow({
	//Reserved Properties
	title: "My First Window",
	backgroundColor: "#fff",
	backgroundImage: "camo.png",
	backgroundRepeat: true,
});

var myHeader = Ti.UI.createView({
	//Reserved Properties
	backgroundColor: "#333",
	borderColor: "red",
	borderRadius: 5,
	borderWidth: 1,
	height: 100,
	top: margin,
	left: margin,
	right: margin,
	//These are custom properties
	id: "Header",
	cost: "$100",
});

var myBody = Ti.UI.createView({
	backgroundColor: "#333",
	borderColor: "red",
	borderRadius: 5,
	borderWidth: 1,
	height: 100,
	top: myHeader.top + myHeader.height + margin,
	left: margin,
	right: margin,
});

var myNext = Ti.UI.createLabel({
	text: "NEXT",
	color: "#999",
	font: font,
	textAlign: "center",
	bottom: margin,
	width: 60,
	//left: margin,
	right: margin,
	backgroundColor: "#000",
	borderRadius: 5,
	borderColor: "#999",
});


var myPrevious = Ti.UI.createLabel({
	text: "PREVIOUS",
	color: "#999",
	font: font,
	textAlign: "center",
	bottom: margin,
	width: 90,
	left: margin,
	//right: margin,
	backgroundColor: "#000",
	borderColor: "#999",
});

var textView = Ti.UI.createView({
	backgroundColor: "#847",
	height: 150,
	top: 120,
	left: margin,
	right: margin,
	borderRadius: 5,
});

var textLabel = Ti.UI.createLabel({
	text: "Click button below to start",
	font: font,
	textAlign: "center",
	top: 25,
	right: 25,
	left: 25,
	bottm: 25,
});


var buttonView = Ti.UI.createView({
	backgroundColor: "green",
	top: margin,
	left: margin,
	right: margin,
	borderRadius: 5,
	height: 50
});

var buttonText = Ti.UI.createLabel({
	color: "black",
	font: font,
	textAlign: "center",
	text: "Change Text"
});

var changeText = function(){
	textLabel.text = "New Text";
};

buttonView.addEventListener("click", changeText);

mainWindow.add(myHeader, myBody, myNext, myPrevious, textView, buttonView);
textView.add(textLabel);
buttonView.add(buttonText);
mainWindow.open();